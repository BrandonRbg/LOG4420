extends layout

block content
  header
    .header-container
      .logo
        a(href='./index.html')
          img(alt='logo', src='./assets/img/logo.svg', title='Accueil')
      nav
        ul
          li.active
            a(href='/accueil') Accueil
          li
            a(href='/produits') Produits
          li
            a(href='/contact') Contact
          li
            a.shopping-cart(href='/panier', title='Panier')
              span.fa-stack.fa-lg
                i.fa.fa-circle.fa-stack-2x.fa-inverse
                i.fa.fa-shopping-cart.fa-stack-1x
              span.count(hidden='')
  main
    article
      img#home-img(alt='home', src='./assets/img/home.png')
      h1 Le site n°1 pour les achats en ligne!
      p Découvrez nos différents produits au meilleur prix.
      a.btn(href='/produits')
        | En savoir plus
        i.fa.fa-angle-double-right
  footer
    p Par Brandon Roberge et Julien Dufresne

